 <div class="media">
    
    <p class="pull-right">
      <small><%= time_ago_in_words(comment.created_at) %> days ago</small>
    </p>

    <div class="media-body">
        
      <h4 class="media-heading"><%= link_to comment.user.name, comment.user %></h4>
      <p><%= comment.body %></p>    
      
    </div>

  <% if correct_user? comment.user %>
    <%= link_to "delete", post_comment_path(comment.post, comment), method: :delete %>
  <% end %>
</div>